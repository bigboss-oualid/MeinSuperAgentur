<div class="card mb-4">
    {% if property.picture %}
        <img class="card-img-top" src="{{ vich_uploader_asset(property.picture, 'imageFile') | imagine_filter('thumb') }}" >
    {% else %}
        <img class="card-img-top" src="{{ '/images/empty.jpg' | imagine_filter('thumb') }}" >
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href = "{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary font-weight-bold" style="font-size: 2rem">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>

