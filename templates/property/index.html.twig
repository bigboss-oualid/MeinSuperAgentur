{% extends 'base.html.twig' %}

{% block title 'Alle Immobilien'%}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col-md-3">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.specifications) }}
                </div>
                <div class="col-md-8">
                    {{ form_row(form.address, {id: 'search_address'}) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.distance) }}
                </div>
                <div class="form-group">
                    <div class="col">
                        <button class="btn btn-warning">Suchen</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-4">
        <h1>Alle Immobilien zeigen</h1>
        <div class="row mt-4">
        {% for property in properties  %}
            <div class="col-md-4">
                {% include 'property/_property.html.twig' %}
            </div>
        {% endfor %}
        </div>
        {# display navigation #}
        <div class="pagination justify-content-center ">
            {{ knp_pagination_render(properties) }}
        </div>
    </div>

    <div class="container">
    </div>
{% endblock %}